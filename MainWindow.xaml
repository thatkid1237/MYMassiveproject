<Window x:Class="Linkedlistsstory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Linkedlistsstory"
        mc:Ignorable="d"
        Title="MainWindow" Height="405" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="70"/>
            <!-- Side Nav -->
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="31*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Side Navigation -->
        <StackPanel Grid.Column="0" Background="#202123" Grid.ColumnSpan="2">
            <Button Content="Story" Foreground="White" Background="Transparent" 
                    BorderBrush="Transparent" FontSize="16" Padding="10"
                    Click="NavButton_Click" Tag="StoryPage"/>

            <Button Content="Settings" Foreground="White" Background="Transparent" 
                    BorderBrush="Transparent" FontSize="16" Padding="10"
                    Click="NavButton_Click" Tag="SettingsPage"/>

            <Button Content="Account" Foreground="White" Background="Transparent" 
                    BorderBrush="Transparent" FontSize="16" Padding="10"
                    Click="NavButton_Click" Tag="AccountPage"/>
        </StackPanel>

        <!-- Content Area -->
        <Frame x:Name="MainFrame" Grid.Column="2" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2" Navigated="MainFrame_Navigated"/>

    </Grid>
</Window>
