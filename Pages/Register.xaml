<UserControl x:Class="Linkedlistsstory.Pages.Register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Linkedlistsstory.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
        <Grid Background="#f0f4f9">
            <Border Background="White" Padding="30" CornerRadius="12" Width="320" Height="290" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel VerticalAlignment="Center" Height="330">
                    <TextBlock FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20" FontWeight="SemiBold"><Run Text="Register"/><Run Language="en-au" Text="register"/></TextBlock>

                    <TextBlock Text="Username" Margin="0,5,0,2"/>
                <TextBox x:Name="UsernameBox" Height="35" Padding="8" Margin="0,0,0,10" TextChanged="UsernameBox_TextChanged"/>
                <TextBlock Text="Username" Margin="0,5,0,2"/>
                <TextBox x:Name="PasswordBox" Height="35" Padding="8" Margin="0,0,0,10" TextChanged="PasswordBox_TextChanged"/>
                <TextBlock Text="Password" Margin="0,5,0,2"/>
                <Button Content="Register" Height="40" Background="#4a90e2" Foreground="White" FontWeight="SemiBold" Click="RegisterButton_click" Width="164"/>
                <TextBlock x:Name="MessageBlock" Foreground="Red" TextAlignment="Center"/>
            </StackPanel>
            </Border>
        </Grid>

</UserControl>